<%- include('includes/head.ejs')%>
</head>

<body>
<%- include('includes/navigation.ejs')%>

<main>
    <% if (prods.length > 0) { %>
    <div class="grid">
        <% for(let product of prods ) {%>
            <article class="card product-item">
                <header class="card__header">
                    <h1 class="product__title"><%= product.title%></h1>
                    <div class="card__image">
                        <img src="https://files.porsche.com/filestore/news/international-de/none/530113/headimage1/b1ca9cb9-6b56-11e8-bbc5-0019999cd470/porsche-More-than-20%2C000-prospective-Taycan-buyers.jpg"  alt="porsche">
                    </div>
                    <div class="cart__content">
                        <h2 class="product__price">$19.99</h2>
                        <p class="product__description">Porsche Tycan all electric</p>
                    </div>
                    <div class="card__action">
                        <button class="btn">Add to Cart</button>
                    </div>
                </header>
            </article>
        <% } %>
    </div>
    <% } else { %>
          <h1>No Products Found!</h1>
    <% } %>
</main>

<%- include('includes/end.ejs')%>
